<h1>Edit</h1>
<div class="row">

  <h2 data-title="<%= JSON.stringify({title: book.title} ) %>" data-location="<%= JSON.stringify({lat: book.locations[book.locations.length - 1].lat, lng: book.locations[book.locations.length - 1].lng } ) %>"></h2>


  <div class="col-lg-6">
    <img src="<%= book.image %>">
    <h2><%= book.author %></h2>
    <p><%= book.description %></p>
    <p><%= book.createdBy.username %></p>
  </div>
  <form class="editForm" method="POST" action="/books/<%= book.id %>">
    <input type="hidden" name="_method" value="PUT">

    <label for="locationDesc"> Location Description</label>
    <textarea class="u-full-width" name="locationDesc"></textarea>

    <input type="hidden" name="lat">
    <input type="hidden" name="lng">
    <input type="hidden" name="googleBookId">
    <button class="u-full-width button-primary">Update</button>

  </form>


  <div class="row">
    <div class="col-lg-4" >
  <div id="map" data-lat="51.515113" data-lng="-0.072051" class="marker"></div>
    </div>
  </div>



</div>
